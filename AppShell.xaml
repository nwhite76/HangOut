<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HangOutApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HangOutApp"
    Shell.FlyoutBehavior="Disabled"
    Title="HangOutApp">

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate Views=local:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Forecast">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate Views=local:ForecastPage}" />
        </Tab>
    </FlyoutItem>
    <!--
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    -->

</Shell>
